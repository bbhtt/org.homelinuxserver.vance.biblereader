{
    "app-id" : "org.homelinuxserver.vance.biblereader",
    "runtime" : "org.freedesktop.Platform",
    "runtime-version" : "18.08",
    "sdk" : "org.freedesktop.Sdk",
    "command" : "biblereader",
    "finish-args" : [
        "--socket=x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network",
        "--persist=.sword"
